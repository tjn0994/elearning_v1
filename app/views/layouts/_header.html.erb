<div id="page-container">
  <!-- Site Header -->
  <header class="header-scroll">
    <div class="container">
      <!-- Site Logo -->
      <%= link_to root_path, class: "site-logo" do %>
          <i class="gi gi-flash"></i> <strong>E-Learning</strong>
      <% end %>
      <!-- Site Logo -->

      <!-- Site Navigation -->
      <nav>
        <!-- Menu Toggle -->
        <!-- Toggles menu on small screens -->
        <a href="javascript:void(0)" class="btn btn-default site-menu-toggle visible-xs visible-sm">
          <i class="fa fa-bars"></i>
        </a>
        <!-- END Menu Toggle -->

        <!-- Main Menu -->
        <ul class="site-nav">
          <!-- Toggles menu on small screens -->
          <li class="visible-xs visible-sm">
            <a href="javascript:void(0)" class="site-menu-toggle text-center">
              <i class="fa fa-times"></i>
            </a>
          </li>
          <!-- END Menu Toggle -->
          <li>
            <%= link_to "Trang chủ", root_path %>
          </li>
          <li>
            <%= link_to "Đăng ký khóa học", members_register_courses_path %>
          </li>
          <li>
            <%= link_to "Bài viết", publish_posts_path %>
          </li>
          <!-- <li>
            link_to "Manager", members_users_path
          </li> -->
          <% if current_user.present? %>
            <li>
              <%= image_tag current_user.avatar.url, class: "width-40 height-40 img-circle" %>
              <ul>
                <li>
                  <%= link_to members_user_path(current_user) do %>
                    <i class="gi gi-user"></i>&nbsp;&nbsp; Thông tin cá nhân
                  <% end %>
                </li>
                <% if current_user.teacher? %>
                  <li>
                    <%= link_to teachers_courses_path do %>
                      <i class="gi gi-user"></i>&nbsp;&nbsp; Giáo viên
                    <% end %>
                  </li>
                <% elsif current_user.admin? %>
                  <li>
                    <%= link_to admins_courses_path do %>
                      <i class="gi gi-user"></i>&nbsp;&nbsp; Quản trị viên
                    <% end %>
                  </li>
                <% end %>
                <li>
                  <%= link_to members_user_courses_path do %>
                    <i class="fa fa-book"></i>&nbsp;&nbsp; Danh sách khóa học
                  <% end %>
                </li>
                <li>
                  <%= link_to members_registered_courses_path do %>
                    <i class="fa fa-book"></i>&nbsp;&nbsp; Danh sách khóa học đang đăng ký
                  <% end %>
                </li>
                <li>
                  <%= link_to members_activities_path do %>
                    <i class="fa fa-signal fa-fw"></i>&nbsp;&nbsp; Hoạt động
                  <% end %>
                </li>
                <li>
                  <%= link_to members_user_settings_path do %>
                    <i class="gi gi-asterisk"></i>&nbsp;&nbsp; Cài đặt
                  <% end %>
                </li>
                <li>
                  <%= link_to members_user_posts_path(current_user) do %>
                    <i class="fa fa-pencil-square-o fa-fw"></i>&nbsp;&nbsp; Bài viết
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path,method: :delete,
                    data: {toggle: "tooltip", placement: "bottom"} do %>
                    <i class="gi gi-exit"></i>&nbsp;&nbsp; Đăng xuất
                  <% end %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_session_path do %>
                Đăng nhập
              <% end %>
            </li>
          <% end %>

        </ul>
        <!-- END Main Menu -->
      </nav>
      <!-- END Site Navigation -->
    </div>
  </header>
  <!-- END Site Header -->
</div>

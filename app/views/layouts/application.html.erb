<!DOCTYPE html>
<html>
  <head>
    <title>ElearningV1</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "home", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
    <%= include_gon %>
  </head>

  <body>
    <%= render "layouts/header" %>
      <br>
      <br>
      <br>
      <br>
      <div class="container">
        <%= render "shared/flash" %>
        <%= yield %>
      </div>
    <% unless user_signed_in? %>
      <%= render "layouts/sign_in_modal" %>
    <% end %>
    <a style="background: #1bbae1; opacity: 0.7" href="#" id="to-top"><i class="fa fa-angle-up"></i></a>

    <%= render "layouts/footer" %>
  </body>
</html>

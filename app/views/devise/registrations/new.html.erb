<style type="text/css">
  #login-container, #login-alt-container {
    width: 480px;
    top: 100px;
    margin-left: -240px;
}
</style>

<div class="login-title text-center">
  <h1>
    <i class="gi gi-flash"></i>
    <strong>Đăng ký</strong>
  </h1>
</div>
<!-- END Login Title -->

<!-- Login Block -->
<div class="block push-bit" style="margin-bottom: 0 !important">
<!-- Login Form -->
  <%= form_for(resource, html: {class: "form-horizontal login-title  bg-white" },
    as: resource_name, url: registration_path(resource_name)) do |f| %>
    <span class="color-red"><center><%= devise_error_messages! %></center></span>
    <div class="form-group">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="gi gi-user"></i>
          </span>
          <div>
          <%= f.text_field :name, autofocus: true,
            class: "form-control", placeholder: "Nhập tên" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="gi gi-envelope"></i>
          </span>
          <div>
          <%= f.email_field :email, autofocus: true,
            class: "form-control", placeholder: "Nhập email" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="gi gi-asterisk"></i>
          </span>
          <%= f.password_field :password, autocomplete: "off",
            class: "form-control", placeholder: "Nhập mật khẩu" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="gi gi-asterisk"></i>
          </span>
          <%= f.password_field :password_confirmation, autocomplete: "off",
            class: "form-control", placeholder: "Nhập lại mật khẩu" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="gi gi-user"></i>
          </span>
          <%= f.select :role, Settings.user_roles.collect {|p| [I18n.t("user.role.#{p.name}"), p.id ] }, {}, class: "form-control selectpicker" %>
        </div>
      </div>
    </div>
    <div>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="col-md-offset-5">
            <%= f.submit "Đăng ký", class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-12 text-right">
        <%= link_to new_user_session_path do %>
          <small>Đăng nhập</small>
        <% end %>
      </div>
    </div>
  <% end %>
<!-- END Login Form -->
</div>
<!-- END Login Block -->


<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Cài đặt</h3>
  </div>
  <div class="panel-body">
    <div class="container form-horizontal">
      <div>
        <label>Cài đặt nhận thông báo</label>
        <label class="switch switch-primary height-22" data-toggle="tooltip" title="remember">
          <% if @user_setting.notify_on? %>
            <%= check_box_tag :notification_setting, "", :checked %>
          <% else %>
            <%= check_box_tag :notification_setting, "" %>
          <% end %>
          <span class="height-22"></span>
        </label>
      </div>
      <div>
        <label>Cài đặt nhận email</label>
        <label class="switch switch-primary height-22" data-toggle="tooltip" title="remember">
          <% if @user_setting.email_on? %>
            <%= check_box_tag :email_setting, "", :checked %>
          <% else %>
            <%= check_box_tag :email_setting, "" %>
          <% end %>
          <span class="height-22"></span>
        </label>
      </div>
    </div>
  </div>
</div>
